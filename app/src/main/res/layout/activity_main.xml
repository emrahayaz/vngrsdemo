<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/main_bg"
    tools:context="com.emrahayaz.vngrs.MainActivity">
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/userInput"
        android:text="@string/info_text"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/userInput"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnConnect"
        android:layout_height="wrap_content" />
    <Button
        android:text="@string/connect_text"
        android:id="@+id/btnConnect"
        android:padding="16dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnConnect"
        android:id="@+id/statusText" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
